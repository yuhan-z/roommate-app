<!doctype html>

<html>

<head>
    <title>Roommate App</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/icons.css">
    <!-- Load an icon library -->
    <script src="https://kit.fontawesome.com/1caf25f8cc.js" crossorigin="anonymous"></script>
    <!-- Load Google Web Fonts/Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!-- <link rel="stylesheet" href="./css/roommateapp.css"> -->
    <!-- this is a comment in HTML -->

<body>
    <div class="container">
        <!-- Navbar -->
        <nav class="navbar bg-light justify-content-center">
            <h3>The Roommate App</h3>
        </nav>
        <!--/. Navbar -->

        <!-- Content -->

        <!-- Logged in User -->
        <div class="media mb-4 mt-3 justify-content-center">
            <img src="/images/chess.jpg" alt="Profile Image" class="mr-2 rounded-circle" style="height:30px; width:30px;">
            <div class="">
                <h4>{{username}}</h4>
            </div>
        </div>

        <!-- Card Content -->
        <div class="text-center" style="padding-bottom: 6rem;">
            <div class="card bg-light mx-auto border-dark mb-4" style="max-width: 25rem;" id="">
                <div class="card-header">
                    Address
                </div>
                <div class="card-body">
                    <p>
                        {{addressline1}} <br>
                        {{addressline2}}
                    </p>
                </div>
            </div>

            <!-- TODAYS UPDATES (AJAX) home.js -->
            <div class="card bg-light mx-auto border-dark" style="max-width: 25rem;" id="">
                <div class="card-header">
                    Today's Updates
                </div>
                <div id="updates">
                    <!-- javascript will fill in here -->
                </div>
            </div>
            <!-- render json -->
        </div>
    </div>
    <!-- Bottom Navbar -->
    {{> nav}}

    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script src="/js/home.js"></script>
    
</body>

</html>